
@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/admin_Layout.cshtml";
}

<div class="center_content">
    <div class="center_title_bar">Update Customer Accounts</div>
    <div class="prod_box_big">
        <div class="top_prod_box_big"></div>
        <div class="center_prod_box_big">
            <div class="contact_form">
                <h4>Customer</h4>
                <hr />
                <form method="post">
                    <table>
                        <tr>
                            <td><b>FirstName :</b></td>
                            <td><input type="text" name="firstname" value="@Model.FirstName" /></td>
                        </tr>
                        <tr>
                            <td><b>LastName :</b></td>
                            <td><input type="text" name="lastname" value="@Model.LastName" /></td>
                        </tr>
                        <tr>
                            <td><b>Username :</b></td>
                            <td><input type="text" name="username" value="@Model.Username" /></td>
                        </tr>
                        <tr>
                            <td><b>Password :</b></td>
                            <td><input type="text" name="password" value="@Model.Password" /></td>
                        </tr>
                        <tr>
                            <td><b>Age :</b></td>
                            <td><input type="text" name="age" value="@Model.Age" /></td>
                        </tr>
                        <tr>
                            <td><b>Gender :</b></td>
                            <td>
                                <input type="radio" name="gender" value="male" checked>Male
                                <input type="radio" name="gender" value="female">Female
                                <input type="radio" name="gender" value="other">Other
                            </td>
                        </tr>
                        <tr>
                            <td><b>Email :</b></td>
                            <td><input type="text" name="email" value="@Model.Email" /></td>
                        </tr>
                        <tr>
                            <td class="checkbox"><b>Country :</b></td>
                            <td>
                                <input type="text" name="country" value="@Model.Country" />
                            </td>
                        </tr>
                        <tr>
                            <td><b>City :</b></td>
                            <td><input type="text" name="city" value="@Model.City" /></td>
                        </tr>
                        <tr>
                            <td><b>Address :</b></td>
                            <td><input type="text" name="address" value="@Model.Address" /></td>
                        </tr>
                        <tr>
                            <td><b>Phone :</b></td>
                            <td><input type="text" name="phone" value="@Model.Phone" /></td>
                        </tr>

                    </table>
                    <br />


                    <br />
                    <div>
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-actions no-color">
                                <input type="submit" value="Save" class="btn btn-default" style="background-color:darkgreen; color:white;" /> |
                                @Html.ActionLink("Back to List", "Index")
                            </div>
                        }
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>