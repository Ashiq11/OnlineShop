@model OnlineShopEntity.Customer

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/admin_Layout.cshtml";
}

<div class="center_content">
    <div class="center_title_bar">Details</div>
    <div class="prod_box_big">
        <div class="top_prod_box_big"></div>
        <div class="center_prod_box_big">
            <div class="contact_form">
                <div>
                    <h4>Product</h4>
                    <hr />
                    <table>
                        <tr>
                            <td><b>FirstName :</b></td>
                            <td>@Model.FirstName</td>
                        </tr>
                        <tr>
                            <td><b>LastName :</b></td>
                            <td>@Model.LastName</td>
                        </tr>
                        <tr>
                            <td><b>Username :</b></td>
                            <td>@Model.Username</td>
                        </tr>
                        <tr>
                            <td><b>Password :</b></td>
                            <td>@Model.Password</td>
                        </tr>
                        <tr>
                            <td><b>Age :</b></td>
                            <td>@Model.Age</td>
                        </tr>
                        <tr>
                            <td><b>Gender :</b></td>
                            <td>@Model.Gender</td>
                        </tr>
                        <tr>
                            <td><b>Email :</b></td>
                            <td>@Model.Email</td>
                        </tr>
                        <tr>
                            <td><b>Country :</b></td>
                            <td>@Model.Country</td>
                        </tr>
                        <tr>
                            <td><b>City :</b></td>
                            <td>@Model.City</td>
                        </tr>
                        <tr>
                            <td><b>Address :</b></td>
                            <td>@Model.Address</td>
                        </tr>
                        <tr>
                            <td><b>Phone :</b></td>
                            <td>@Model.Phone</td>
                        </tr>
                        <tr>
                            <td><b>Status :</b></td>
                            <td>@Model.Status</td>
                        </tr>
                        <tr>
                            <td><b>LastLogin :</b></td>
                            <td>@Model.LastLogin</td>
                        </tr>
                    </table>
                    <br />
                </div>
                <p>
                    @Html.ActionLink("Update", "Update", new { id = Model.CustomerID }) |
                    @Html.ActionLink("Back to List", "Index")
                </p>
            </div>
        </div>
    </div>
</div>
