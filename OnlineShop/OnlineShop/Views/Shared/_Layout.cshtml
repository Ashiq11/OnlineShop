<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/")css/style.css" />
    <script type="text/javascript" src="~/Content/js/boxOver.js"></script>
    <script src='https://www.google.com/recaptcha/api.js'></script>
    @RenderSection("head", false)
  
</head>
<body>
    <div id="main_container">
        <div class="top_bar">
            <div class="top_search">
                <div class="search_text"><a href="#">Advanced Search</a></div>
                <input type="text" class="search_input" name="search" />
                <input type="image" src="@Url.Content("~/Content/")images/search.gif" class="search_bt" />
            </div>
            <div class="languages">
                <div class="lang_text">Languages:</div>
                <a href="http://www.bangladesh.com/" class="lang"><img src="@Url.Content("~/Content/")images/bd.png" alt="" border="0" /></a><a href="#" class="lang"><img src="@Url.Content("~/Content/")images/en.gif" alt="" border="0" /></a> <a href="#" class="lang"><img src="@Url.Content("~/Content/")images/de.gif" alt="" border="0" /></a>
            </div>
        </div>
        <div id="header">
            <div id="logo"> <a href="@Url.Action("Index","Home")"><img src="@Url.Content("~/Content/")images/logo.png" alt="" border="0" width="237" height="140" /></a> </div>
            <div class="oferte_content">
                <div class="top_divider"><img src="@Url.Content("~/Content/")images/header_divider.png" alt="" width="1" height="164" /></div>
                <div class="oferta">
                    <div class="oferta_content">
                        <img src="@Url.Content("~/Content/")images/laptop.png" width="94" height="92" alt="" border="0" class="oferta_img" />
                        <div class="oferta_details">
                            <div class="oferta_title">Samsung GX 2004 LM</div>
                            <div class="oferta_text"> This is Friends Family Electronics Online Shopping site where any one can get all of the electronics items also buy easily. </div>
                            <a href="@Url.Action("Index","Home")" class="details">details</a>
                        </div>
                    </div>
                    <div class="oferta_pagination"> <span class="current">1</span> <a href="#">2</a> <a href="#">3</a> <a href="#">4</a> <a href="#">5</a> </div>
                </div>
                <div class="top_divider"><img src="@Url.Content("~/Content/")images/header_divider.png" alt="" width="1" height="164" /></div>
            </div>
            <!-- end of oferte_content-->
        </div>
        <div id="main_content">
            <div id="menu_tab">
                <div class="left_menu_corner"></div>
                <ul class="menu">
                    <li><a href="@Url.Action("Index","Home")" class="nav1"> Home</a></li>
                    <li class="divider"></li>
                    <li><a href="@Url.Action("Index","Home")" class="nav2">Products</a></li>
                    <li class="divider"></li>
                    
                    @if (Session["CustomerLogin"] != null)
                    {
                        <li><a href="~/Login/Logout" class="nav4">Logout</a></li>
                        <li class="divider"></li>
                    }
                    else
                    {
                         <li><a href="@Url.Action("Index","Login")" class="nav4">Login</a></li>
                         <li class="divider"></li>
                    }
                    <li><a href="@Url.Action("Register","Customer")" class="nav4">Sign Up</a></li>
                    <li class="divider"></li>
                    <li class="divider"></li>
                    <li><a href="@Url.Action("Index","ContactUs")" class="nav6">Contact Us</a></li>
                    <li class="divider"></li>
                    <li class="currencies">
                        Currencies
                        <select>
                            <option>US Dollar</option>
                            <option>Euro</option>
                            <option>Taka</option>
                        </select>
                    </li>
                </ul>
                <div class="right_menu_corner"></div>
            </div>
            <!-- end of menu tab -->

            <div class="crumb_navigation"> Navigation: <span class="current">Home</span> </div>
            <div class="left_content">
                <div class="title_box">Categories</div>
                <ul class="left_menu">
                    <li class="odd"><a href="~/Product/Details/3">Mobiles</a></li>
                    <li class="even"><a href="#">Laptops & NoteBooks</a></li>
                    <li class="odd"><a href="#">Processors</a></li>
                    <li class="even"><a href="#">MotherBoards</a></li>
                    <li class="odd"><a href="#">Monitors</a></li>
                    <li class="even"><a href="#">DSLR Camera</a></li>
                    <li class="even"><a href="#">STORAGE</a></li>
                    <li class="even"><a href="#">Office Equipment</a></li>
                    <li class="even"><a href="#">Audio/Vedio</a></li>
                    <li class="even"><a href="#">Accessories</a></li>
                </ul>
                <div class="title_box">Special Products</div>
                <div class="border_box">
                    <div class="product_title"><a href="details.html">Motorola 156 MX-VL</a></div>
                    <div class="product_img"><a href="details.html"><img src="@Url.Content("~/Content/")images/laptop.png" alt="" border="0" /></a></div>
                    <div class="prod_price"><span class="reduce">350$</span> <span class="price">270$</span></div>
                </div>
                <div class="title_box">Newsletter</div>
                <div class="border_box">
                    <input type="text" name="newsletter" class="newsletter_input" value="your email" />
                    <a href="#" class="join">join</a>
                </div>
                <div class="banner_adds"> <a href="#"><img src="@Url.Content("~/Content/")images/bann2.jpg" alt="" border="0" /></a> </div>
            </div>
            <!-- end of left content -->
         
            @RenderBody() 
     
            
            <!-- end of right content -->
        </div>
            <!-- end of main content -->
            <div class="footer">
                <div class="left_footer"> <img src="@Url.Content("~/Content/")images/footer_logo.png" alt="" width="170" height="49" /> </div>
                <div class="center_footer">
                    Friends Family electornixShop. All Rights Reserved ashiqchowdhury 2017<br />
                    <img src="@Url.Content("~/Content/")images/payment.gif" alt="" />
                </div>
                <div class="right_footer"> <a href="#">home</a> <a href="#">about</a> <a href="#">account</a> <a href="https://www.facebook.com/marashiq.chowdhuary">Facebook</a> <a href="contact.html">contact us</a> </div>
            </div>

            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - My ASP.NET ECommerceApp</p>
            </footer>
    </div>
</body>
</html>